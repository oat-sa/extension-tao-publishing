                        <icon id="icon-bin"/>
                    </action>
					<action id="platform-new" name="Add Platform" url="/taoPublishing/PlatformAdmin/addInstanceForm" context="class" group="tree">
                        <icon id="icon-add"/>
                    </action>
				</actions>
			</section>
